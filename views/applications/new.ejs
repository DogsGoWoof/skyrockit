<%- include('../partials/_head-style.ejs') %>
    <title>Add a New App</title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Add a New App</h1>
    <div class="new-body">
        <fieldset>
            <legend><p>Job Application</p></legend>
            <form action="/users/<%= user._id %>/applications" method="POST">
                <label for="company">Company:</label>
                <input type="text" name="company" id="company">
                
                <label for="title">Title:</label>
                <input type="text" name="title" id="title">
                
                <label for="notes">Notes:</label>
                <textarea name="notes" id="notes"></textarea>
                
                <label for="postingLink">Posting Link:</label>
                <input type="text" name="postingLink" id="postingLink">
                
                <label for="status">Status:</label>
                <select id="status" name="status">
                    <option value="interested">Interested &#x1F914</option>
                    <option value="applied">Applied &#x1F623</option>
                    <option value="interviewing">Interviewing &#x1F623</option>
                    <option value="rejected">Rejected &#x1F635</option>
                    <option value="accepted">Accepted &#x1F973</option>
                </select>
                
                <button type="submit">Add Application</button>
            </form>
        </fieldset>
    </div>

</body>

</html>